{
  "version": 2,
  "name": "vlanet",
  "alias": ["vlanet.app", "www.vlanet.app"],
  "regions": ["icn1", "nrt1"],
  "framework": "nextjs",
  "buildCommand": "pnpm ci",
  "installCommand": "pnpm install --frozen-lockfile",
  "outputDirectory": ".next",

  "functions": {
    "app/**/*.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    },
    "pages/api/**/*.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    }
  },

  "crons": [
    {
      "path": "/api/cron/update-trending",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/daily-stats",
      "schedule": "0 2 * * *"
    }
  ],

  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=60, stale-while-revalidate=300"
        }
      ]
    },
    {
      "source": "/(.*).mp4",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],

  "redirects": [
    {
      "source": "/videoplanet",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/old-app/(.*)",
      "destination": "/",
      "permanent": true
    }
  ],

  "rewrites": [
    {
      "source": "/api/v1/(.*)",
      "destination": "/api/$1"
    }
  ],

  "env": {
    "VERCEL_ENV": "production"
  },

  "build": {
    "env": {
      "NODE_ENV": "production",
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },

  "github": {
    "autoJobCancelation": true,
    "autoAlias": true
  }
}